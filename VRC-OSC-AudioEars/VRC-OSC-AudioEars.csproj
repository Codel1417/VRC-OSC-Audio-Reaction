<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net6.0</TargetFramework>
        <RootNamespace>VRC_OSC_AudioEars</RootNamespace>
        <ImplicitUsings>disable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <Title>VRC OSC Audio Reaction</Title>
        <Description>This take the audio from your default audio output device and sends OSC parameters for direction and amplitude.</Description>
        <PackageProjectUrl>https://github.com/Codel1417/VRC-OSC-Audio-Reaction</PackageProjectUrl>
        <PackageLicenseUrl>https://github.com/Codel1417/VRC-OSC-Audio-Reaction/blob/master/license.txt</PackageLicenseUrl>
        <RepositoryUrl>https://github.com/Codel1417/VRC-OSC-Audio-Reaction</RepositoryUrl>
        <NeutralLanguage>en-US</NeutralLanguage>
        <IsPackable>false</IsPackable>
        <RepositoryType>git</RepositoryType>
        <ProduceReferenceAssembly>False</ProduceReferenceAssembly>
        <PlatformTarget>x64</PlatformTarget>
        <BaseOutputPath>bin\</BaseOutputPath>
        <RuntimeIdentifier>win10-x64</RuntimeIdentifier>
        <PublishSingleFile>true</PublishSingleFile>
        <SelfContained>true</SelfContained>
        <PublishTrimmed>true</PublishTrimmed>
        <PublishReadyToRun>true</PublishReadyToRun>
        <PublishProfile>Release</PublishProfile>
        <DebugType>embedded</DebugType>
        <BuiltInComInteropSupport>true</BuiltInComInteropSupport>
        <Version>1.0.0</Version>
        <AssemblyVersion>$(Version)</AssemblyVersion>
        <FileVersion>$(Version)</FileVersion>
        <InformationalVersion>$(Version)</InformationalVersion>
        <ProductVersion>$(Version)</ProductVersion>
        <Company>Codel1417</Company>

    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
        <DebugType>full</DebugType>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
        <DebugType>none</DebugType>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="BuildSoft.OscCore" Version="1.0.5" />
        <PackageReference Include="Microsoft.CSharp" Version="4.7.0" />
        <PackageReference Include="NAudio.Core" Version="2.0.0" />
        <PackageReference Include="NAudio.Wasapi" Version="2.0.0" />
        <PackageReference Include="NLog" Version="4.7.15" />
            <None Update="nlog.config" CopyToOutputDirectory="Always" />
        <PackageReference Include="Octokit" Version="0.50.0" />
        <PackageReference Include="Sentry" Version="3.15.0" />
        <PackageReference Include="VRCOscLib" Version="1.1.2" />

    </ItemGroup>

</Project>
